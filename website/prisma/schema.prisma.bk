generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int       @id @default(autoincrement())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  proxmoxId     String?
  accounts      Account[]
  sessions      Session[]

  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  UserRoles     UserRoles[]
  userScenarios UserScenario[]
  userAnswers   UserAnswers[]
}

model UserRoles {
  id     Int  @id @default(autoincrement())
  userId Int
  role   Role
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, role])
}

enum Role {
  ADMIN
  TEACHER
  STUDENT
  GUEST
}

model Account {
  userId            Int
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([provider, providerAccountId])
}

model Session {
  id           Int      @id @default(autoincrement())
  sessionToken String   @unique
  userId       Int
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Scenario {
  id          String       @id @default(cuid())
  name        String
  description String?
  topologyMap  String?
  questions   Curriculum[]

  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  userScenarios UserScenario[]

  @@map("scenario")
}

model Curriculum {
  id          String   @id @default(cuid())
  title       String
  placeholder String
  validation  String?
  answer      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  scenario    Scenario?     @relation(fields: [scenarioId], references: [id])
  scenarioId  String?
  userAnswers UserAnswers[]

  @@map("curriculum")
}

model UserScenario {
  id          String  @id @default(cuid())
  userId      Int
  scenarioId  String
  isCompleted Boolean @default(false)

  vms VMs[]

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  scenario Scenario @relation(fields: [scenarioId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, scenarioId])
  @@map("user_scenario")
}

model UserAnswers {
  id           String @id @default(cuid())
  userId       Int
  curriculumId String
  answer       String

  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  curriculum Curriculum @relation(fields: [curriculumId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, curriculumId])
  @@map("user_answers")
}

model VMs {
  id             String        @id @default(cuid())
  vmId           Int           @unique
  name           String
  userScenario   UserScenario? @relation(fields: [userScenarioId], references: [id])
  userScenarioId String?

  @@map("vms")
}
