generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            Int            @id @default(autoincrement())
  name          String?
  email         String         @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  proxmoxId     String?
  accounts      Account[]
  sessions      Session[]
  UserRoles     UserRoles[]
  userAnswers   UserAnswers[]
  userScenarios UserScenario[]
}

model UserRoles {
  id        Int      @id @default(autoincrement())
  userId    Int
  role      Role
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, role])
}

model Account {
  userId            Int
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  id           Int      @id @default(autoincrement())
  sessionToken String   @unique
  userId       Int
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model SkillCategory {
  id          Int          @id @default(autoincrement())
  key         String       @unique
  label       String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  curriculums Curriculum[]

  @@map("skill_categories")
}

model Scenario {
  id               String         @id @default(cuid())
  name             String
  description      String?
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  topologyMap      String?
  advanced         String?
  slug             String         @unique
  teaser           String?
  youtubeChannelId String?
  questions        Curriculum[]
  userScenarios    UserScenario[]

  @@map("scenario")
}

model Curriculum {
  id              String        @id @default(cuid())
  title           String
  placeholder     String
  validation      String?
  answer          String
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  scenarioId      String?
  pointValue      Int           @default(10)
  skillCategoryId Int
  scenario        Scenario?     @relation(fields: [scenarioId], references: [id], onDelete: Cascade)
  skillCategory   SkillCategory @relation(fields: [skillCategoryId], references: [id])
  userAnswers     UserAnswers[]

  @@map("curriculum")
}

model UserScenario {
  id          String   @id @default(cuid())
  userId      Int
  scenarioId  String
  isCompleted Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  scenario    Scenario @relation(fields: [scenarioId], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  vms         VMs[]

  @@unique([userId, scenarioId])
  @@map("user_scenario")
}

model UserAnswers {
  id           String     @id @default(cuid())
  userId       Int
  curriculumId String
  answer       String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  isCorrect    Boolean
  curriculum   Curriculum @relation(fields: [curriculumId], references: [id], onDelete: Cascade)
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, curriculumId])
  @@map("user_answers")
}

model VMs {
  id             String        @id @default(cuid())
  vmId           Int           @unique
  name           String
  userScenarioId String?
  userScenario   UserScenario? @relation(fields: [userScenarioId], references: [id], onDelete: Cascade)

  @@map("vms")
}

enum Role {
  ADMIN
  TEACHER
  STUDENT
  GUEST
}
