generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int            @id @default(autoincrement())
  name          String?
  email         String         @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  proxmoxId     String?
  accounts      Account[]
  sessions      Session[]
  UserRoles     UserRoles[]
  userAnswers   UserAnswers[]
  userScenarios UserScenario[]
}

model UserRoles {
  id        Int      @id @default(autoincrement())
  userId    Int
  role      Role
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, role])
}

model Account {
  userId            Int
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  id           Int      @id @default(autoincrement())
  sessionToken String   @unique
  userId       Int
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Scenario {
  id               String         @id @default(cuid())
  name             String
  description      String?
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  topologyMap      String?
  advanced         String?
  slug             String         @unique
  teaser           String?
  youtubeChannelId String?
  learningObjectives String?
  questions        Curriculum[]
  userScenarios    UserScenario[]

  @@map("scenario")
}

model Curriculum {
  id            String        @id @default(cuid())
  title         String
  placeholder   String
  validation    String?
  answer        String
  pointValue    Int           @default(10)

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  scenario      Scenario?     @relation(fields: [scenarioId], references: [id], onDelete: Cascade)
  scenarioId    String?
  skillCategories CurriculumSkillCategory[]  // NEW: many-to-many
  userAnswers   UserAnswers[]

  @@map("curriculum")
}

model CurriculumSkillCategory {
  id           Int           @id @default(autoincrement())
  curriculum   Curriculum    @relation(fields: [curriculumId], references: [id], onDelete: Cascade)
  curriculumId String
  skillCategory SkillCategory @relation(fields: [skillCategoryId], references: [id])
  skillCategoryId Int

  @@unique([curriculumId, skillCategoryId])
  @@map("curriculum_skill_category")
}

model SkillCategory {
  id           Int       @id @default(autoincrement())
  key          String    @unique
  label        String

  curriculums  CurriculumSkillCategory[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("skill_categories")
}

model UserScenario {
  id          String   @id @default(cuid())
  userId      Int
  scenarioId  String
  isCompleted Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  scenario    Scenario @relation(fields: [scenarioId], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  vms         VMs[]

  @@unique([userId, scenarioId])
  @@map("user_scenario")
}

model UserAnswers {
  id           String     @id @default(cuid())
  userId       Int
  curriculumId String
  answer       String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  isCorrect    Boolean
  curriculum   Curriculum @relation(fields: [curriculumId], references: [id], onDelete: Cascade)
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, curriculumId])
  @@map("user_answers")
}

model VMs {
  id             String        @id @default(cuid())
  vmId           Int           @unique
  name           String
  userScenarioId String?
  userScenario   UserScenario? @relation(fields: [userScenarioId], references: [id], onDelete: Cascade)

  @@map("vms")
}

enum Role {
  ADMIN
  TEACHER
  STUDENT
  GUEST
}
